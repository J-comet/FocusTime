<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Activity.MySayingAnotherActivity">


    <androidx.appcompat.widget.Toolbar
        android:id= "@+id/another_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:titleTextColor="#fff" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_memo"
            android:layout_centerHorizontal="true"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="30dp"
            android:elevation="0dp">

    <ImageView
        android:id="@+id/imageMemo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/memo"
        />
        </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/memoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_below="@+id/card_memo"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/MemoTextView"
        android:layout_width="match_parent"
        android:layout_height="150dp"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:text="memo"
        android:textColor="#a9a9a9"
        android:textSize="18sp"
        android:layout_below="@id/memoTitle"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/anotherDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yyyy-MM-DD"
        android:layout_alignParentRight="true"/>

        <!--
        <Button
            android:id="@+id/revise_memo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수 정"
            android:textSize="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_below="@+id/MemoTextView"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="#EE7067"
            />
            -->

    </RelativeLayout>

</LinearLayout>